          "range": ["Dev", "Base Prod", "Prod", "Super Prod"]
        },
        {
          "key": "vxnet",
          "label": "VxNet",
          "description": "Choose a vxnet to join",
          "type": "string",
          "default": "",
          "required": "yes"
        },
        {
          "key": "nifi_node",
          "label": "Participant Node",
